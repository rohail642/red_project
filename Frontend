<!-- Additional sections and content go here -->

<script>
    // JavaScript for handling horizontal scroll and arrow button click
    const scrollContainer = document.querySelector('.horizontal-scroll');
    const arrowButton = document.querySelector('.arrow-btn');
    const loginSignup = document.querySelector('.login-signup');

    arrowButton.addEventListener('click', () => {
        scrollContainer.scrollBy({
            left: window.innerWidth,
            behavior: 'smooth',
        });
    });

    // JavaScript for toggling the responsive menu
    function toggleMenu() {
        const navMenu = document.querySelector('.nav-menu');
        navMenu.classList.toggle('active');
    }

    // JavaScript for showing/hiding login and signup buttons based on scroll
    window.addEventListener('scroll', () => {
        const scrollPosition = window.scrollY;

        // Set a threshold value based on your layout
        const threshold = 200;

        if (scrollPosition > threshold) {
            loginSignup.classList.add('hidden');
        } else {
            loginSignup.classList.remove('hidden');
        }
    });
</script>

